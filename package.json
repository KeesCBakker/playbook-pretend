{
  "name": "hubot-pretend",
  "description": "Test Hubot scripts with a mock robot, rooms and users.",
  "main": "./lib/index.js",
  "scripts": {
    "standard" : "standard 'src/modules/**/*.js' 'test/**/*.js' | snazzy",
    "test": "npm run standard && npm run test-unit && npm run test-integration",
    "test-unit": "mocha --compilers coffee:coffee-script/register test",
    "test-unit-debug": "mocha --inspect --debug-brk --compilers coffee:coffee-script/register test",
    "test-integration": "cd dummy && npm i && npm run test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm test",
    "prepush": "npm test",
    "prepublish": "coffee --compile --output lib/ src/ && cp -r ./src/vendor ./lib/vendor",
    "commit": "git-cz"
  },
  "keywords": [
    "hubot"
  ],
  "dependencies": {
    "bluebird": "^3.5.0",
    "hubot-async": "2.19.1-async",
    "lodash": "^4.17.4",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "co": "^4.6.0",
    "coffee-script": "^1.12.4",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "mocha": "^3.2.0",
    "semantic-release": "^6.3.2",
    "standard": "^10.0.2",
    "validate-commit-msg": "^2.12.0"
  },
  "author": "Tim Kinnane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timkinnane/hubot-pretend"
  },
  "version": "0.1.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
