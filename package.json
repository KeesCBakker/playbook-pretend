{
  "name": "hubot-pretend",
  "description": "Test Hubot scripts with a mock robot, rooms and users.",
  "main": "./lib/index.js",
  "scripts": {
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "mocha --compilers coffee:coffee-script/register test",
    "test-unit-debug": "mocha --inspect --debug-brk --compilers coffee:coffee-script/register test",
    "test-integration": "cd dummy && npm i && npm run test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm test",
    "prepush": "npm test",
    "prepublish": "coffee --compile --output lib/ src/",
    "commit": "git-cz"
  },
  "keywords": [
    "hubot"
  ],
  "dependencies": {
    "hubot": ">= 2.6.0 < 3"
  },
  "devDependencies": {
    "bluebird": "^3.5.0",
    "chai": "^3.5.0",
    "co": "^4.6.0",
    "coffee-script": "^1.12.4",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.12.0"
  },
  "author": "Tim Kinnane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timkinnane/hubot-pretend"
  },
  "version": "0.0.0-development",
  "release": {
    "analyzeCommits": "hubot-pretend",
    "generateNotes": "./lib/index.js",
    "verifyConditions": {
      "path": "./lib/index.js",
      "additional": "config"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
