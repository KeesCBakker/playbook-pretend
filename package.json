{
  "name": "hubot-pretend",
  "description": "Test Hubot scripts with a mock robot, rooms and users.",
  "main": "./lib/index.js",
  "scripts": {
    "standard": "standard 'src/modules/**/*.js' 'test/**/*.js' | snazzy",
    "test": "npm run standard && npm run mocha && npm run integration",
    "mocha": "mocha --bail test",
    "mocha:watch": "mocha --bail --watch test",
    "mocha:debug": "mocha --inspect --debug-brk  --compilers js:babel-core/register test",
    "_integration": "cd dummy && npm i && npm run test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "_commitmsg": "validate-commit-msg",
    "_precommit": "npm test",
    "_prepush": "npm test",
    "_commit": "git-cz",
    "build": "babel src --source-maps --out-dir lib",
    "build:watch": "babel src --watch --source-maps --out-dir lib"
  },
  "keywords": [
    "hubot"
  ],
  "dependencies": {
    "coffee-script": "^1.12.7",
    "lodash": "^4.17.4",
    "mockery": "^2.1.0",
    "npmlog": "^4.1.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-preset-es2015-node": "^6.1.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.5.0",
    "chai-things": "^0.2.0",
    "cz-conventional-changelog": "^2.0.0",
    "hubot-async": "v3.0.1-async",
    "husky": "^0.13.3",
    "mocha": "^3.2.0",
    "mocha-clean": "^1.0.0",
    "mocha-co": "^1.17.2",
    "semantic-release": "^6.3.2",
    "standard": "^10.0.2",
    "validate-commit-msg": "^2.12.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "author": "Tim Kinnane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timkinnane/hubot-pretend"
  },
  "version": "0.1.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
